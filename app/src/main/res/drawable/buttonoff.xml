<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="@dimen/imagewidth_30dp"  android:width="@dimen/imagewidth_30dp">


        <shape android:shape="oval">
            <size android:width="40dp" android:height="40dp"/>
            <solid android:color="#FF0000" />
            <stroke android:color="#000" android:width="2dp"/>
            <corners android:radius="8dp"/>
        </shape>

    </item>
    <item android:width="@dimen/ringsize" android:height="@dimen/ringsize" android:gravity="center">

        <shape android:shape="oval">
            <size android:width="20dp" android:height="20dp"/>
            <solid android:color="#FF6C00" />
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>